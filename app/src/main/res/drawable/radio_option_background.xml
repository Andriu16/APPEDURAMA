<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#F0EEFF" />
            <stroke android:color="#6C63FF" android:width="2dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F8F9FD" />
            <stroke android:color="#E0E4F0" android:width="1dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>