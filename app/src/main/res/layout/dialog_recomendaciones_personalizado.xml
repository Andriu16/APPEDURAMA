<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_background"
    android:padding="24dp"
    android:layout_margin="16dp"
    android:elevation="12dp"
    android:translationZ="4dp">

    <!-- Contenedor del título con fondo decorativo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/title_background_gradient"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="2dp"
        android:translationZ="1dp">

        <!-- Título principal -->

        <!-- Línea decorativa debajo del título -->
        <TextView
            android:id="@+id/textViewTituloDialogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2dp"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="✨ Recomendaciones para Ti ✨"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/title_underline_gradient" />

    </LinearLayout>

    <!-- Contenedor del RecyclerView con sombra -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FAFAFA"
        android:translationZ="2dp">

        <!-- Lista para las recomendaciones -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecomendaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:padding="8dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recomendacion"
            tools:itemCount="3" />

    </androidx.cardview.widget.CardView>

    <!-- Contenedor del botón con efectos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- Botón de Aceptar mejorado -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAceptarDialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡ENTENDIDO!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:elevation="8dp"
            android:translationZ="3dp"
            android:stateListAnimator="@null"
            app:cornerRadius="25dp"
            android:background="@drawable/button_gradient_background"
            app:strokeWidth="0dp"
            app:iconPadding="8dp"
            app:rippleColor="#33FFFFFF" />

    </LinearLayout>

</LinearLayout>