<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tarjeta de Bienvenida Principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center"
                android:background="@drawable/card_gradient_bg">

                <!-- Título Principal con Efecto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Bienvenido a EduRama!"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Subtítulo con Estilo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descubre tu camino profesional ideal. Navegaremos juntos tu futuro con recomendaciones y conocimientos personalizados."
                    android:textSize="16sp"
                    android:textColor="#37474F"
                    android:textAlignment="center"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="24dp"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:fontFamily="sans-serif-light" />

                <!-- Botón Principal Mejorado -->
                <Button
                    android:id="@+id/btn_encuentra_camino"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="✨ Encuentra tu camino!"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/button_gradient_primary"
                    android:paddingHorizontal="40dp"
                    android:shadowColor="#80FFC107"
                    android:shadowDx="0"
                    android:shadowDy="4"
                    android:shadowRadius="8"
                    android:elevation="8dp"
                    android:letterSpacing="0.02" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tarjeta Verde Mejorada con Icono -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:backgroundTint="#4CAF50">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp"
                android:background="@drawable/green_card_gradient">

                <!-- Líneas decorativas mejoradas -->
                <View
                    android:id="@+id/line1"
                    android:layout_width="50dp"
                    android:layout_height="6dp"
                    android:background="@drawable/accent_line_gradient"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="-30dp"
                    android:elevation="2dp" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="35dp"
                    android:layout_height="6dp"
                    android:background="@drawable/accent_line_gradient"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="-12dp"
                    android:elevation="2dp" />

                <View
                    android:id="@+id/line3"
                    android:layout_width="42dp"
                    android:layout_height="6dp"
                    android:background="@drawable/accent_line_gradient"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="6dp"
                    android:elevation="2dp" />

                <!-- Icono de graduación mejorado -->
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="#FFFFFF">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_graduation_cap"
                        app:tint="#4CAF50" />

                </androidx.cardview.widget.CardView>

                <!-- Texto flotante -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Educación"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ideas Personalizadas Mejoradas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:background="@drawable/card_subtle_gradient">

                <!-- Icono lateral -->
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    android:layout_marginRight="16dp"
                    android:backgroundTint="#E3F2FD">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_foco"
                         />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡 Ideas Personalizadas"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:layout_marginBottom="8dp"
                        android:shadowColor="#40000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Responde algunas preguntas y obtén sugerencias de especialización personalizadas basadas en tus intereses y aspiraciones únicas."
                        android:textSize="14sp"
                        android:textColor="#455A64"
                        android:lineSpacingExtra="3dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Rutas de Aprendizaje Guiadas Mejoradas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:background="@drawable/card_subtle_gradient">

                <!-- Icono lateral -->
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    android:layout_marginRight="16dp"
                    android:backgroundTint="#F3E5F5">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_ruta"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🛤️ Rutas de Aprendizaje Guiadas"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#7B1FA2"
                        android:layout_marginBottom="8dp"
                        android:shadowColor="#40000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explora rutas de aprendizaje detalladas, comprende las habilidades requeridas y ve todas las oportunidades profesionales para cada campo."
                        android:textSize="14sp"
                        android:textColor="#455A64"
                        android:lineSpacingExtra="3dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Alcanza Tus Metas Mejorado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:background="@drawable/card_subtle_gradient">

                <!-- Icono lateral -->
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    android:layout_marginRight="16dp"
                    android:backgroundTint="#E8F5E8">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_apunte"
                         />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯 Alcanza Tus Metas"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#388E3C"
                        android:layout_marginBottom="8dp"
                        android:shadowColor="#40000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toma decisiones informadas sobre tu educación y futura carrera con información actualizada de instituciones líderes."
                        android:textSize="14sp"
                        android:textColor="#455A64"
                        android:lineSpacingExtra="3dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>