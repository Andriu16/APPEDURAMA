<?xml version="1.0" encoding="utf-8"?>
<!--
    Usamos ConstraintLayout como contenedor principal para posicionar
    el header, el RecyclerView y los estados de carga/error de forma flexible.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.notifications.NotificationsFragment">

    <!-- 1. Header Section -->
    <!-- Este LinearLayout contiene el título y la descripción.
         Lo anclamos a la parte superior de la pantalla. -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Icon Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/icon_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFC107"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_book"
                app:tint="#333333" />

        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Explora rutas de aprendizaje"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Descubre varias especializaciones, los cursos que involucran, las habilidades que adquirirás y las posibles oportunidades profesionales."
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 2. RecyclerView for Learning Paths -->
    <!-- Anclado debajo del header y ocupando el resto del espacio hasta el final de la pantalla.
         layout_height="0dp" con constraints arriba y abajo hace que se estire para llenar el espacio. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLearningPaths"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        tools:listitem="@layout/item_learning_path" />

    <!-- 3. ProgressBar que se mostrará centrado -->
    <!-- Anclado al centro del padre. Se superpondrá a todo lo demás. -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <!-- 4. TextView para mostrar errores o mensajes de estado -->
    <!-- También anclado al centro para superponerse. -->
    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:textColor="#757575"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Error al cargar las rutas.\nPor favor, intenta de nuevo."
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>