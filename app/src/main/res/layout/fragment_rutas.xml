<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1d28"
    android:padding="24dp">

    <!-- Nodo 1 (abajo derecha - AISLADO) -->

    <!-- Línea horizontal desde nodo 1 (sin conexión) -->

    <!-- Nodo 2 (abajo izquierda) -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="90dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#4A69BD"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/line_from_1"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:background="#A0A0A0"
        app:layout_constraintBottom_toBottomOf="@id/card1"
        app:layout_constraintEnd_toStartOf="@id/card1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card1"
        app:layout_constraintVertical_bias="0.402" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#4A69BD"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Línea vertical de 2 a 3 -->
    <View
        android:id="@+id/line_2_to_3"
        android:layout_width="3dp"
        android:layout_height="100dp"
        android:background="#A0A0A0"
        app:layout_constraintBottom_toTopOf="@id/card2"
        app:layout_constraintEnd_toEndOf="@id/card2"
        app:layout_constraintStart_toStartOf="@id/card2"
        app:layout_constraintTop_toBottomOf="@id/card3" />

    <!-- Nodo 3 (medio izquierda) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="90dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#4A69BD"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Línea horizontal de 3 a 4 -->
    <View
        android:id="@+id/line_3_to_4"
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:background="#A0A0A0"
        app:layout_constraintBottom_toBottomOf="@id/card3"
        app:layout_constraintEnd_toStartOf="@id/card4"
        app:layout_constraintStart_toEndOf="@id/card3"
        app:layout_constraintTop_toTopOf="@id/card3" />

    <!-- Nodo 4 (medio derecha) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="90dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#4A69BD"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="@id/card3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card3"
        app:layout_constraintHorizontal_bias="0.65">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Línea vertical de 4 hacia arriba -->
    <View
        android:id="@+id/line_4_to_5_vertical"
        android:layout_width="3dp"
        android:layout_height="80dp"
        android:background="#A0A0A0"
        app:layout_constraintBottom_toTopOf="@id/card4"
        app:layout_constraintEnd_toEndOf="@id/card4"
        app:layout_constraintStart_toStartOf="@id/card4"
        app:layout_constraintTop_toBottomOf="@id/card5" />

    <!-- Línea horizontal hacia el nodo 5 -->
    <View
        android:id="@+id/line_4_to_5_horizontal"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:background="#A0A0A0"
        app:layout_constraintBottom_toBottomOf="@id/card5"
        app:layout_constraintEnd_toStartOf="@id/card5"
        app:layout_constraintStart_toEndOf="@id/line_4_to_5_vertical"
        app:layout_constraintTop_toTopOf="@id/card5" />

    <!-- Nodo 5 (arriba derecha) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="90dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#4A69BD"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>