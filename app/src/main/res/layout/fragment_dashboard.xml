<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_university"
                android:background="@drawable/circle_background_primary"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/institution_icon" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instituciones Educativas"
                android:textSize="28sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descubre tu camino profesional ideal. Navegamos juntos tu futuro con recomendaciones y conocimientos personalizados"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Institution Cards -->

        <!-- Universidad Autónoma del Perú -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/upn"
                    android:background="@drawable/circle_background_blue"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/university_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Universidad Privada Del Norte "
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Formación integral con excelencia académica. Desarrolla tu potencial profesional con nuestros programas de pregrado y posgrado."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/roboto_regular"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Visitar sitio web"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/primary_blue"
                        android:background="@drawable/button_background_blue"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingHorizontal="16dp"
                        android:drawableEnd="@drawable/ic_external"
                        android:drawablePadding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tecsup -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/utp_logo"
                    android:background="@drawable/circle_background_green"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/tecsup_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Universidad Tecnologica Del Perú"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Educación técnica de vanguardia. Especialízate en tecnología e ingeniería con metodologías innovadoras y equipos de última generación."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/roboto_regular"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Visitar sitio web"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/primary_green"
                        android:background="@drawable/button_background_green"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingHorizontal="16dp"
                        android:drawableEnd="@drawable/ic_external"
                        android:drawablePadding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Universidad Nacional de Ingeniería -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/uni_logo"
                    android:background="@drawable/circle_background_orange"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/uni_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Universidad Nacional de Ingeniería"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tradición y excelencia en ingeniería. Lidera el futuro tecnológico del país con una educación de calidad internacional."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/roboto_regular"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Visitar sitio web"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_background_orange"
                        app:backgroundTint="@color/primary_yellow"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingHorizontal="16dp"
                        android:drawableEnd="@drawable/ic_external"
                        android:drawablePadding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Certus -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/certus_logo"
                    android:background="@drawable/circle_background_purple"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/certus_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Certus"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Educación técnica superior con enfoque práctico. Prepárate para el mercado laboral con carreras innovadoras y alta empleabilidad."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/roboto_regular"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Visitar sitio web"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_background_purple"
                        android:fontFamily="@font/roboto_medium"
                        app:backgroundTint="@color/primary_purple"
                        android:paddingHorizontal="16dp"
                        android:drawableEnd="@drawable/ic_external"
                        android:drawablePadding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>